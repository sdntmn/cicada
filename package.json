{
  "name": "cicada",
  "version": "1.0.0",
  "repository": "https://github.com/sdntmn/cicada.git",
  "author": "Denis Sorokin <sdntmn@mail.ru>",
  "main": "dist/index.html",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn dev:client\" \"yarn dev:server\"",
    "dev:client": "vite",
    "dev:server": "node -r ts-node/register ./json-server/index.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "eslint": "eslint src --ext .ts,.tsx",
    "eslint:fix": "eslint src --fix --ext .ts,.tsx",
    "prettier": "prettier -c --ignore-unknown src",
    "prettier:fix": "prettier -c --ignore-unknown --write src",
    "stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "stylelint:fix": "stylelint --fix src"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "@types/json-server": "^0.14.8",
    "classnames": "^2.5.1",
    "itpc-ui-kit": "^4.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.5.0",
    "@types/node-fetch": "^2.6.8",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/vinyl-named": "^1.1.1",
    "@types/webpack": "^5.28.1",
    "@types/webpack-stream": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-perfectionist": "^2.2.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "json-server": "0.17.4",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "stylelint": "^15.10.2",
    "stylelint-no-unsupported-browser-features": "^7.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2",
    "stylelint-scss": "^5.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.7"
  }
}